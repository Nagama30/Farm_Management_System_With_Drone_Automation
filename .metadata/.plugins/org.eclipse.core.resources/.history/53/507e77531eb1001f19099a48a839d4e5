public class Main extends Application {
    private static boolean isDashboardOpen = false; // Global lock to prevent multiple instances

    @Override
    public void start(Stage primaryStage) {
        if (isDashboardOpen) {
            System.out.println("Dashboard is already running.");
            return; // Prevent further execution if already running
        }

        isDashboardOpen = true; // Mark the dashboard as open

        try {
            FXMLLoader loader = new FXMLLoader(getClass().getResource("MainScene.fxml"));
            Parent root = loader.load();
            primaryStage.setTitle("Farm Management Dashboard");

            // Set up the dashboard
            Scene scene = new Scene(root, 1200, 800); 
            primaryStage.setScene(scene);

            // Set minimum and maximum window sizes
            primaryStage.setMinWidth(1000);
            primaryStage.setMinHeight(700);
            primaryStage.setMaxWidth(1600);
            primaryStage.setMaxHeight(1000);

            // Reset the global lock when the dashboard is closed
            primaryStage.setOnCloseRequest(event -> isDashboardOpen = false);

            primaryStage.show();
        } catch (Exception e) {
            e.printStackTrace();
            isDashboardOpen = false; // Reset lock if there was an error
        }
    }

    public static void main(String[] args) {
        launch(args);
    }
}